%p
  %b Title:
  =h @software.title
%p
  %b Copies:
  =h @software.copies
=link_to 'Edit', edit_software_path(@software)
|
=link_to 'Back', softwares_path
%div
  %h2 Comments
  %hr/
  =render_comments @software
-form_for Comment.new do |f|
  =hidden_field_tag :return_to, url_for(@software)
  =f.hidden_field :commentable_id, :value => @software.id
  =f.hidden_field :commentable_type, :value => @software.class
  %h3 New Comment
  =f.text_area :body
  =submit_tag 'Add Comment'
