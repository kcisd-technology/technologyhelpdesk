!!!
%html
  %head
    %title Technology Help Desk
    =stylesheet_link_tag 'application'
  %body
    #pageWrapper
      #pageTitle
        %h1{:align=>'center'} Technology Help Desk
        %h2{:align=>'center', :style=>'color: red'} Coming Soon
      #sideBar
        -if logged_in?
          #gravatar{:style => 'padding-left:15px'}
            =current_user.gravatar
        %ul#navigation
          %li= link_to "Home", root_path
          %li= user_auth_link
          -restrict_to "admin" do
            %li= link_to "User Management", users_path
            %li= link_to "Role Management", roles_path
            %li= link_to "Software Management", softwares_path
      #pageContent
        #flashNotice= flash[:notice]
        =yield
        -if RAILS_ENV == 'development'
          %pre= debug request
          %pre= debug session
      #pageFooter= ' '
