<h2>Listing devices</h2>

<table>
  <tr>
    <th>Serial</th>
    <th>Description</th>
    <th>Hostname</th>
    <th>Ip address</th>
    <th>Mac address</th>
  </tr>

<% for device in @devices %>
  <tr>
    <td><%=h device.serial %></td>
    <td><%= link_to device.description, device %></td>
    <td><%=h device.hostname %></td>
    <td><%=h device.ip_address %></td>
    <td><%=h device.mac_address %></td>
    <td><%= link_to 'Edit', edit_device_path(device) %></td>
    <td><%= link_to 'Destroy', device, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

